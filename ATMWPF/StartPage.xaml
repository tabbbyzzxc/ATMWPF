<Page x:Class="ATMWPF.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ATMWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#5B5B5B"
      Title="StartPage">


    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Image Source="logos\mastercard.png" Height="90" Margin="0,0,0,30"/>
            <Image Source="logos\visa.png" Height="70"/>
        </StackPanel>
       
        <Image Grid.Column="1" Source="logos/instercard.png" Height="170"/>

        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Background="Gray"/>
        <Button Style="{StaticResource ATMButtonStyle}" Grid.Column="1" Grid.Row="2" Height="60" Margin="0,15,0,15" Content="Operation without card" Click="WithoutCardBtn_Click" />
    </Grid>
</Page>
