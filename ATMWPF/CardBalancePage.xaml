<Page x:Class="ATMWPF.CardBalancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ATMWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#5B5B5B"
      Title="CardBalancePage">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Balance: " HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Foreground="White"/>
            <Label Content="{Binding Balance}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Foreground="White"/>
        </StackPanel>

        <Button Style="{StaticResource ATMButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="325" Height="60" Margin="0,15,0,15" Content="Back" Click="BackBtn_Click" />
    </Grid>
</Page>
